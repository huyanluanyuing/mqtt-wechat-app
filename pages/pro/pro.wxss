.container-direction {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200px;
  background-color: #fff;
}
.compass-canvas {
  width: 200px;
  height: 200px;
}
.container-gauge {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 250px;
  background-color: #fff;
}

.gauge-canvas {
  width: 200px;
  height: 200px;
}

.relative {
  height: 100%;
  width: 100%;

}
.pic_background {
  height: 100%;
  width: 100%;
  position: absolute;
}
.pic_tou {
  height: 100%;
  width: 100%;
  position: absolute;
}
.container-rocker {
  display: flex;
  flex-direction: row; /* 水平排列 */
  justify-content: space-between; /* 元素之间均匀分布 */
}

.buttonContainer {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.flexbox-button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50px; /* 根据需要调整按钮宽度 */
  height: 100px; /* 根据需要调整按钮高度 */
}

.flexbox-text {
  font-size: 15px;
}


.touchView {
  height: 1000px;
  width: 1000px;
  margin: 0 auto;
  background-color: antiquewhite;
}
.progress-container {
  width: 100%;
  height: 20px;
  background-color: #f0f0f0;
  border-radius: 10px;
  overflow: hidden;
}
.fontStyle{
  font-family: cursive;
  font-size: 25px;
  font-style: italic;
  font-weight: bold;
}

.box{
  border: 1px solid silver;
  margin: 20rpx;
  padding: 20rpx;
}
.title{
  font-size: 25px;
  text-align: center;
  margin-bottom: 15px;
  color:palevioletred;
}